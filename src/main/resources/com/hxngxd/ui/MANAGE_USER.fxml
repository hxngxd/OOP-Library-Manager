<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hxngxd.ui.controller.tab.ManageUserController">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" spacing="15.0" AnchorPane.bottomAnchor="15.0"
              AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0"
              AnchorPane.topAnchor="15.0">
            <children>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308"
                       text="QUẢN LÝ NGƯỜI DÙNG">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" prefHeight="50.0" spacing="5.0">
                    <children>
                        <FontAwesomeIconView glyphName="SEARCH" size="20">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </FontAwesomeIconView>
                        <TextField fx:id="searchField" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" promptText="Tìm kiếm"
                                   HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </TextField>
                        <Label maxWidth="1.7976931348623157E308" text="Tìm theo">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="searchFieldComboBox" prefHeight="50.0" prefWidth="150.0"
                                  HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <ScrollPane fitToHeight="true" VBox.vgrow="ALWAYS">
                    <content>
                        <TableView fx:id="userTableView" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308"
                                   nodeOrientation="LEFT_TO_RIGHT">
                            <columns>
                                <TableColumn fx:id="idColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="50.0" text="ID"/>
                                <TableColumn fx:id="lastNameColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="150.0" text="Họ và tên đệm"/>
                                <TableColumn fx:id="firstNameColumn" maxWidth="500.0"
                                             minWidth="20.0" prefWidth="100.0" text="Tên"/>
                                <TableColumn fx:id="dateOfBirthColumn" maxWidth="500.0"
                                             minWidth="20.0" prefWidth="150.0" text="Ngày sinh"/>
                                <TableColumn fx:id="usernameColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="150.0" text="Username"/>
                                <TableColumn fx:id="emailColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="200.0" text="Email"/>
                                <TableColumn fx:id="addressColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="200.0" text="Địa chỉ"/>
                                <TableColumn fx:id="roleColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="100.0" text="Vai trò"/>
                                <TableColumn fx:id="joinDateColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="150.0" text="Ngày tham gia"/>
                                <TableColumn fx:id="statusColumn" maxWidth="500.0" minWidth="20.0"
                                             prefWidth="150.0" text="Trạng thái"/>
                                <TableColumn fx:id="lastActivityColumn" maxWidth="500.0"
                                             minWidth="20.0" prefWidth="150.0"
                                             text="Hoạt động cuối cùng"/>
                                <TableColumn fx:id="violationCountColumn" maxWidth="500.0"
                                             minWidth="20.0" prefWidth="75.0" text="Vi phạm"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </content>
                </ScrollPane>
                <HBox maxHeight="50.0" prefHeight="40.0" spacing="15.0">
                    <children>
                        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                mnemonicParsing="false" stylesheets="@style.css"
                                text="XOÁ NGƯỜI DÙNG" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button layoutX="10.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                stylesheets="@style.css" text="ĐỔI MẬT KHẨU" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button layoutX="1143.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                stylesheets="@style.css" text="KHOÁ NGƯỜI DÙNG" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button layoutX="1127.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                stylesheets="@style.css" text="CẤM NGƯỜI DÙNG" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button layoutX="1118.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                stylesheets="@style.css" text="THẢ NGƯỜI DÙNG" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button layoutX="1122.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                stylesheets="@style.css" text="ĐỔI VAI TRÒ" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
